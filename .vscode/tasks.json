{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": "build",
            "command": "docker build . -t poker"
        },
        {
            "label": "run",
            "type": "shell",
            "group": "build",
            "dependsOn": ["build"],
            "command": "docker run -v ./logs/gamelog.log:/poker/gamelog.txt -v ./logs/A.log:/poker/A.txt -v ./logs/B.log:/poker/B.txt poker"
        }
    ]
}